upstream app_<%= deploy[:environment][:dns_name] %> {
    server 127.0.0.1:<%= deploy[:environment][:port] %>;
}

server {
    listen 0.0.0.0:80;
    server_name <%= deploy[:environment][:dns_name] %>;
    access_log /var/log/nginx/<%= deploy[:environment][:dns_name] %>;

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      proxy_pass http://app_<%= deploy[:environment][:dns_name] %>/;
      proxy_redirect off;
    }
 }
